<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddParking">

    <EditText
        android:id="@+id/etCity"
        android:layout_width="367dp"
        android:layout_height="56dp"
        android:layout_marginBottom="560dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Enter City"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="12dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="14sp"
        android:textFontWeight="700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnConfirmAddParking"
        android:layout_width="367dp"
        android:layout_height="56dp"
        android:layout_marginBottom="280dp"
        android:text="ADD"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/custom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etColumns"
        android:layout_width="367dp"
        android:layout_height="56dp"
        android:layout_marginBottom="350dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Enter Number of columns"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="12dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="14sp"
        android:textFontWeight="700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etRows"
        android:layout_width="367dp"
        android:layout_height="56dp"
        android:layout_marginBottom="420dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Enter Number of Rows"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="12dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="14sp"
        android:textFontWeight="700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etBuilding"
        android:layout_width="367dp"
        android:layout_height="56dp"
        android:layout_marginBottom="490dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Enter Building"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="12dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="14sp"
        android:textFontWeight="700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBarAddParking"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConfirmAddParking" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="415dp"
        android:layout_height="64dp"
        android:fontFamily="@font/butler_bold"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="Enter Details of the Parking Lot"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>